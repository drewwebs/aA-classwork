<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table id="bands">
  <thead>
    <tr>
      <th>Band Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><a href="<%= band_albums_url(band) %>"> Show Band </a></td>
        <td><a href="<%= edit_band_url(band) %>"> Edit Band </a></td>
        <td><form action="<%= band_url(band) %>" method = "POST">
          <input type="hidden" name="_method" value="DELETE"> 
          <%= auth_token %>
          <input type="submit" value="Delete Band!"> </form></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Band', new_band_path %>
