<h1> <%= @band.name %> Albums</h1>

<table id="albums">
  <thead>
    <tr>
      <th>Album Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><a href="<%= album_url(album) %>"> Show Album </a></td>
        <td><a href="<%= album_url(album) %>"> Edit Album </a></td>
        <td><form action="<%= album_url(album) %>" method = "POST">
          <input type="hidden" name="_method" value="DELETE"> 
          <%= auth_token %>
          <input type="submit" value="Delete Album!"> </form></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>